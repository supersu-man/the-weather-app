<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheWeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/alcovex_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="the_weather">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#4B77BE</item>
    </style>

    <style name="celcius">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#3F3D56</item>
    </style>

    <style name="visakhapatn">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#4B77BE</item>
    </style>

    <style name="progress_indicator">
        <item name="indicatorColor">@color/alcovex_primary</item>
        <item name="trackCornerRadius">5dp</item>
        <item name="indicatorSize">60dp</item>
        <item name="trackThickness">6dp</item>
    </style>

    <style name="card_theme">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>